<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Content/images/favicon.png">
    <title>@ViewBag.Title - C# Quiz</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("John D Potts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <image src="~/Content/images/logo.png" alt ="John D Potts logo" class="logo"></image>

             
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Play", "Index", "Home")</li>
                    <li><a class="section-scroll" href="#about">About</a></li>
                    <li><a class="section-scroll" href="#contact">Contact</a></li>
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />



        <section id="about">
            <div class="row">
                <div class="col-sm-3 col-xs-1">
                   
                </div>
                <div class="col-sm-2 col-xs-4">
                    <div class="text-center">
                        <img src="~/Content/images/icon-mvc.png" class="img-responsive img-circle technologies" alt="MVC">
                        <img src="~/Content/images/icon-c.png" class="img-responsive img-circle technologies" alt="C#" />
                        <img src="~/Content/images/icon-entity.png" class="img-responsive img-circle technologies" alt="Entity Framework" />
                        <img src="~/Content/images/icon-angular.png" class="img-responsive img-circle technologies" alt="AngularJS">
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <h2>About this Web Application</h2>
                    <h4>Test your knowledge of the C# programming language</h4>
                    <p>This quiz was created using AngularJS on the front end and an ASP.NET Web API on the back end.</p>
                    <p>
                        Special features of this app include:
                        <ul>
                            <li>A database created using Entity Framework Code-First Migrations</li>
                            <li>Google and Facebook logins with OAuth 2.0 </li>
                            <li>AngularJS enables an interactive quiz system with calls to the back end for questions</li>
                            <li>Mobile-friendly navbar and layout with Bootstrap</li>
                            <li>Responsive tables and charts created with Bootstrap</li>

                        </ul>
                    </p>
                    <a href="https://github.com/johndpotts/quiz-app" class="btn btn-teal">View Project on GitHub</a>

                </div>
                <div class="col-sm-3 col-xs-1"></div>
            </div>

        </section>


        <!-- CONTACT SECTION -->
        <section id="contact">

            <div class="row">
                <div class="col-med-8 col-md-offset-4 text-center">
                    <h3 class="section-heading">Get in Touch</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <h4>John D Potts</h4>
                    <ul class="list-unstyled">
                        <li><abbr title="Mail"><span class="icon icon-Mail"></span></abbr> 7929 White Cliffs Dr</li>
                        <li><abbr><span class="icon icon-Mail" style="visibility:hidden"></span></abbr> Mint Hill, NC 28227</li>
                    </ul>
                    <ul class="list-unstyled">
                        <li><abbr title="Phone"><span class="fa fa-phone fa-2x"></span></abbr> (352) 441-0329</li>
                        <li><abbr title="Email"><span class="fa fa-envelope fa-2x"></span></abbr><a href="mailto:jdpotts189@gmail.com"> jdpotts189@gmail.com</a></li>
                    </ul>
                    <br />
                    
                    <a href="https://github.com/johndpotts" target="_blank">
                        <i class="fa fa-github fa-2x dark"></i>
                    </a>
                    <a href="https://www.linkedin.com/in/jdpotts189" target="_blank"><i class="fa fa-linkedin fa-2x dark"></i></a>
                </div>
                <div class="col-sm-8">
                    <form action="@Url.Action("Contact", "Home")" method="post" id="contactForm" novalidate="">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" for="cname" class="form-control" name="Name" placeholder="Your Name" id="name" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Your Email" id="cemail" name="Email" for="cemail" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control" placeholder="Your Phone Number" id="phone" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Write your message here" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                          
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-warning">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


        </section>
        <footer>
            <p class="text-center" style="color:#fff">&copy;  @DateTime.Now.Year - John D Potts</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
